#form
  %form{ :method => 'post', :action => '/haiku', :style => 'padding: 15px' }
    -if @haiku.errors.any?
      %div.alert.alert-error
        %ul
          - @haiku.errors.each do |key, error|
            %li= error
    %textarea.span4{ :type => 'text', :name => 'haiku', :rows => '5', :placeholder => 'Write!' }
      = @haiku.lines.join("<br>")
    %br
    %button{ :type => :submit, :class => 'btn btn-large' } Save!
